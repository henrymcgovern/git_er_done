
<div class="row">
<div class="small-12 medium-6 columns">
</div>
  <div class="small-12 medium-6 columns">
<h3>2) bucket tasks</h3>
</div>
</div>
<%= form_tag update_multiple_tasks_path, method: :put do %>
  <% @tasks.each do |task| %>
    <div class="row">
    <%= fields_for "tasks[]", task do |t| %>
      <div class="small-12 large-6 columns">
        <%= t.text_field :description %>
      </div>
      <div class="small-4 large-2 columns">
        <%= t.radio_button :category_id, "1" %>
        <%= t.label :category_id, 'Do It' %>
      </div>
      <div class="small-4 large-2 columns">
        <%= t.radio_button :category_id, "2" %>
        <%= t.label :category_id, 'Plan It' %>
      </div>
      <div class="small-4 large-2 columns">
        <%= t.radio_button :category_id, "3" %>
        <%= t.label :category_id, 'Later' %>
      </div>
    <% end %>
    </div>
  <% end %>
  <p><%= submit_tag 'Update All', class: "button radius" %></p>
<% end %>
<h3>don't forget to click 'update' before moving on</h3>
  <div class="row">
      <div class="small-12 columns">
      <% flash.each do |key, value| %>
        <p><%= key %>: <%= value %></p>
      <% end %>
    </div>
  </div>

<%= link_to "Do It", finish_tasks_path, class: "button radius" %>

<%= link_to "Plan It", project_tasks_path, class: "button radius" %>

<%= link_to "Later", later_tasks_path, class: "button radius" %>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="js/jquery.screwDefaultButtonsV2.min.js"></script>

<script type="text/javascript">
    $('input:radio').screwDefaultButtons({
        image: 'url("/assets/radioSmall.jpg")',
        width: 42.5,
        height: 42.5
    });
</script>