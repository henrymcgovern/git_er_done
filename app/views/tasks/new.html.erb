  <div class="row">
    <div class="small-12 columns">
      <h1>Nice, start adding tasks!</h1>
    </div>
  </div>
  <%= form_for @task do |f| %> 	
    <div class="row">
      <div class="small-9 columns">
        <%= f.text_field :description %>
      </div>
    </div>
    <div class="row">
      <div class="small-3 columns">
        <%= f.submit "Add Task", class: "button radius" %>
      </div>
    </div>
  <% end %>
    <div class="row">
      <div class="small-12 columns">
        <% if !@tasks.empty? %>
          <p><%= render 'link' %></p>
        <% end %>
      </div>
    </div>