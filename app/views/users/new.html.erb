<h1>Sign Up Page</h1>

<%= form_for @user do |f| %>

	<% if @user.errors.any? %>
	<h3>form is invalid</h3>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :email %><br />
	<%= f.text_field :email %>
	<br />
	<%= f.label :password %><br />
	<%= f.password_field :password %>
	<br />
	<%= f.label :password_confirmation %><br />
	<%= f.password_field :password_confirmation %>
	<br />
	<%= f.submit %>
<% end %>



